<?xml version='1.0' encoding='utf-8'?>
<widget id="com.brainworldstore.www" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>The New Philippine Almanac</name>
    <description>
        BRAINWORLD MULTI-NATIONAL EDUCATION CORPORATION (BMEC) Clark, Hongkong, The New Philippine Almanac - Millenial Edition 2019
    </description>
    <author email="info@evenlyten.com" href="https://www.evenlyten.com">
        Evenly Ten Web Solutions
    </author>
    <content src="index.html" />
    <access origin="*" />

  	<platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/ios/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/ios/icon-76.png" width="76" height="76" />
        <icon src="res/ios/icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/icon.png" width="57" height="57" />
        <icon src="res/ios/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/ios/icon-72.png" width="72" height="72" />
        <icon src="res/ios/icon-72@2x.png" width="144" height="144" />
     </platform>
     
     <platform name="android">
     	<icon src="icon.png" density="mdpi" />
     	<icon src="icon.png" density="hdpi" />
     	<icon src="icon.png" density="xhdpi" />
     	<icon src="icon.png" density="xxhdpi" />
     	<icon src="icon.png" density="xxxhdpi" />
		<preference name="android-minSdkVersion" value="14" />
		<preference name="android-targetSdkVersion" value="27" />
     </platform>
	 <plugin name="onesignal-cordova-plugin" spec="2.0.11" source="npm" />
